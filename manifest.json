{
	"manifest_version": 2,
	"name": "archive.is redirector",
	"description": "Redirects any website to its archived version in archive.is",
	"version": "1.0",
	"icons": {
	},
    "background": {
        "scripts" : [
            "background.js"
        ]
    },
    "browser_action": {
        "default_icon": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "48": "images/icon-48.png",
            "128": "images/icon-128.png"
        }
    },
    "permissions": [
        "activeTab"
    ]
}